# Windows 环境配置文件
# 复制此文件为 .env 并根据实际情况修改配置

# 基础环境配置
NODE_ENV=development
PORT=3000
API_PORT=3001

# 代理配置
COORDINATOR_PORT=3000
COLLECTOR_PORT=3001
PROCESSOR_PORT=3002
ANALYZER_PORT=3003

# 数据库配置
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/news.db

# Redis 配置 (需要安装 Redis 或使用 Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Python 服务配置
PYTHON_SERVICE_URL=http://localhost:8000
PYTHON_SERVICE_ENABLED=false

# OpenAI API 配置 (用于 AI 功能)
OPENAI_API_KEY=your-openai-api-key-here

# RSSHub 配置
RSSHUB_URL=http://124.221.80.250:5678

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/coordinator.log

# 安全配置
API_SECRET_KEY=your-secret-key-here
CORS_ORIGIN=http://localhost:3000

# 代理配置
AGENT_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=30000
HEARTBEAT_TIMEOUT=60000

# 开发配置
DEBUG_MODE=true
ENABLE_DEV_TOOLS=true